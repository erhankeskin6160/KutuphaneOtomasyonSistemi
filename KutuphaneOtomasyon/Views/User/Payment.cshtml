@model User;
 


<h2>Ödeme Yap</h2>

<form method="post" asp-controller="User" asp-action="Payment">
    <input type="hidden" asp-for="Id"  />
    
    <div>
        <label for="odemeMiktari">Ödeme Miktarı:</label>
        <input type="number" id="ödenenmiktar" name="ödenenmiktar" min="1" step="0.01" required />
    </div>
    
    <button type="submit">Ödeme Yap</button>
</form>

 