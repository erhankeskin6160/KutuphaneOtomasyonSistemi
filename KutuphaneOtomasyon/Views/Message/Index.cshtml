@model List<Message>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h2>Gelen Mesajlar Sayfası</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>Gönderen</th>
        <th>Konu</th>
        <th>Mesaj</th>
        <th>Tarih</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.Sender. </td>
            <td>@x.Subject </td>
            <td>@x.Content </td>
            <td>@x.DateTime.ToLongDateString(); </td>
        </tr>
    }
</table>