
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] KütüphaneOtomasyonSistemi</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @* <link rel="stylesheet" href="~/KütüphaneOtomasyonSistemi.styles.css" asp-append-version="true" /> *@
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

</head>
<body class="d-flex flex-column min-vh-100">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark" style="border-radius: 0; padding-top: 0.5rem; padding-bottom: 0.5rem;">
        <div class="container">
            <!-- Sepet ikonu -->
            <a href="@Url.Action("ViewCart", "Cart")" id="cart-icon" class="me-3 text-white">
                <i class="fa fa-shopping-cart"></i>
                <span id="cart-count" style="display:none; color: red;"></span>
            </a>

            <!-- Logo veya site ismi eklenebilir -->
            <a class="navbar-brand" href="/Home/Index">Kütüphane</a>

            <!-- Hamburger butonu (mobilde aç/kapa için) -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Menüyü Aç/Kapat">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Menü -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Index">Ana Sayfa</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Book">Kitaplar</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Login/Index">Üye Giriş</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/">Üye Ol</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>


    <div class="container">
        @RenderBody()
    </div>

    @* <footer class="footer bg-dark text-white text-center py-3" style="position: fixed; bottom: 0; width: 100%;">
        <div class="container">
            <p class="mb-0">&copy; 2024 Kütüphane. Tüm hakları saklıdır.</p>
        </div>
    </footer> *@



</body>
</html>